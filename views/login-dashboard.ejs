<!doctype html>
<html lang="en">

<head>
    <%- include("partial/head-meta.ejs") %>
    <title>Login</title>
    <!-- Custom styles for this template -->
    <link href="/css/login-style.css" rel="stylesheet">
</head>

<body class="text-center">

    <main class="form-signin">
        <i class="fas fa-key fa-8x logo"></i>
        <form action="/login-dashboard" method="POST">
            <h1 class="h3 mb-3 fw-normal signin-title">LOGIN TO DASHBOARD</h1>
            <input name="email" type="email" class="form-control name" placeholder="Username" required autofocus>
            <input name="password" type="password" id="inputPassword" class="form-control password"
                placeholder="Password" required>
            <button class="w-100 btn btn-lg btn-dark" name="submit" type="submit">LOGIN</button>
        </form>
        <!-- show error message if user has entered wrong login information -->
        <div class="login-status mt-3">
            <% if(status == 'fail') { %>  
            <%- include('partial/message') %>
            <% } %>
        </div>
    </main>

</body>