<!DOCTYPE html>
<html lang="en">

<head>
	<%- include("partial/head-meta.ejs") %>
	<title>Sign Up</title>
</head>

<body>
	<nav class="navbar navbar-light bg-light navbar-dark bg-dark">
    <div class="container-fluid">
        <span class="navbar-brand mb-0 mt-0 h1">Admin Dashboard</span>
    </div>
</nav>
	<div class="container-fluid">
		<% if (messageSuccess) { %>
		<%- include("partial/message-green") %>
		<% } %>
		<% if (messageError) { %>
		<%- include("partial/message-red") %>
		<% } %>
		<h1 class="text-center">Sign Up as Admin</h1>
		<div class="row">
			<div class="col-lg-4"></div>
			<div class="col-lg-4">
				<form action="/signup-dashboard" method="POST">
				<div class="form-group mt-2">
					<label class="mt-1" for="email">Email Address</label>
					<input type="email" class="form-control" id="email" name="email" placeholder="Insert Email" required>
				</div>
				<div class="form-group mt-2">
					<label class="mt-1" for="password">Password</label>
					<input type="password" class="form-control" id="password" name="password" placeholder="Insert Password" required>
				</div>
				<div class="form-group mt-2">
					<label class="mt-1" for="role">Role</label>
					<input type="text" class="form-control" id="role" name="role" value="admin" required disabled>
				</div>
				<button type="submit" class="btn btn-primary mt-3">Sign Up</button>
			</form>
		</div>
			<div class="col-lg-4"></div>
		</div>
		

	</div>
	</div>

	<script type="text/javascript" src="/script/bootstrap.min.js"></script>
</body>

</html>